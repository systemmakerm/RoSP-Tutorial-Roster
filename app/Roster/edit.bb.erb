<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @roster.object %>
    <h1>Edit <%= @roster.username%></h1>
    <%= link_to "Delete", :action => :delete, :id => @roster.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @roster.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Username: </td>
              <td class="itemValue"><input type="text" name="roster[username]" value="<%= @roster.username %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Company name: </td>
              <td class="itemValue"><input type="text" name="roster[company_name]" value="<%= @roster.company_name %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Address: </td>
              <td class="itemValue"><input type="text" name="roster[address]" value="<%= @roster.address %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Phone number: </td>
              <td class="itemValue"><input type="text" name="roster[phone_number]" value="<%= @roster.phone_number %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
