<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @rosterserver.username %></h1>
    <!--<a href="<%= url_for :action => :show, :id => @rosterserver.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">-->
    <a href="<%= url_for :action => :show, :id => @rosterserver.id %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <!--<a href="<%= url_for :action => :delete, :id => @rosterserver.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">-->
    <a href="<%= url_for :action => :delete, :id => @rosterserver.id %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <!--<input type="hidden" name="id" value="<%= @rosterserver.object %>"/>-->
      <input type="hidden" name="id" value="<%= @rosterserver.id %>"/>
      
          <div data-role="fieldcontain">
            <label for="rosterserver[username]" class="fieldLabel">Username</label>
            <input type="text" id="rosterserver[username]" name="rosterserver[username]" value="<%= @rosterserver.username %>" <%= placeholder( "Username" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="rosterserver[company_name]" class="fieldLabel">Company name</label>
            <input type="text" id="rosterserver[company_name]" name="rosterserver[company_name]" value="<%= @rosterserver.company_name %>" <%= placeholder( "Company name" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="rosterserver[address]" class="fieldLabel">Address</label>
            <input type="text" id="rosterserver[address]" name="rosterserver[address]" value="<%= @rosterserver.address %>" <%= placeholder( "Address" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="rosterserver[phone_number]" class="fieldLabel">Phone number</label>
            <input type="text" id="rosterserver[phone_number]" name="rosterserver[phone_number]" value="<%= @rosterserver.phone_number %>" <%= placeholder( "Phone number" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
